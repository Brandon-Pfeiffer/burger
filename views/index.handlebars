<div class="container"></div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<img src="../public/assets/img/burgerpic.jpg" alt="beautiful burger">
			<h1> Devour Da Burger! </h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each burgers}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				
				</div>
				<div class="col-xs-3">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<type="text" placeholder="{{this.id}} . {{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Choose a tasty burger, hit Submit</p>
		</div>
	</div>
</div>